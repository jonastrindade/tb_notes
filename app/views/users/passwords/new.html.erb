<h2></h2>
<div class="d-flex justify-content-center h-100">
  <div class="card">
    <div class="card-header">
      <h3>Forgot your password?</h3>
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-group form-group form-control mt-2" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-purple text-white mt-2" %>
        </div>
      <% end %>
    </div>

   <div class="card-footer">
      <%= render "users/shared/links" %>
    </div>

  </div>
</div>